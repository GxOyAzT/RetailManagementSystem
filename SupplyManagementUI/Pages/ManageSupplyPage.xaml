<Page x:Class="SupplyManagementUI.Pages.ManageSupplyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SupplyManagementUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageSupplyPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtPrevStep" Grid.Column="0" Click="Click_PrevStep" Margin="2">
                BACK
            </Button>

            <TextBlock x:Name="TbStep" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button x:Name="BtNextStep" Grid.Column="2" Click="Click_NextvStep" Margin="2">
                NEXT
            </Button>
        </Grid>

        <Frame x:Name="SupplyMainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
