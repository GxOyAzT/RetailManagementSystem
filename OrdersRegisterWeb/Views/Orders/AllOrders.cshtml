@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Models.OrderModel>

<h1>Orders/AllOrders</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>ConfirmationDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.OrderUqName)</td>
                <td>
                    @if (item.IsConfirmed)
                    {
                        <p>Confirmed</p>
                    }
                    else
                    {
                        <a asp-action="OrderDetails" asp-route-orderId="@(item.Id.ToString())">Modify</a>
                    }
                </td>
                <td>
                    @if (item.IsConfirmed)
                    {
                        <p>@(item.ConfirmationDate.Value.ToString("yyyy-MM-dd"))</p>
                    }
                    else
                    {
                        <p>-</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>